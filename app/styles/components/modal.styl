.modal
  &-form
    .modal-footer
      padding: 15px

  &-m
    &-backdrop
      background-color: rgba(0,0,0,0.5) !important
      fixed: top 0 left 0
      width: 100%
      height: 100%
      z-index: 1035
      transition: all .3s
      transform: scale(1)
      opacity: 0
      &.show
        transform-origin: 50% 100%
        opacity: 1

    &-no-bd
      > .modal.in
        background-color: transparent
